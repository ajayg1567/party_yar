/** RTL **/
.rtl {
    direction: rtl;
    font-family: Tahoma, 'Helvetica Neue', 'Helvetica', Helvetica, Arial, sans-serif;
}

.rtl table {
    text-align: right;
}

.rtl table tr td:nth-child(2) {
    text-align: left;
}


</style>
<h3>Order #<%= @order.order_no%> Details</h3>

<div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
          <tr class="top">
            <td colspan="4">
              <table>
                <tr>
                  <td class="title">
                    <%= image_tag wicked_pdf_asset_base64('logo.png') %>
                  </td>

                  <td>
                    Invoice #: <b><%= @order.id %></b>
                    <br>
                    Created: <b><%= @order.created_at.strftime('%d/%m/%Y') %></b>
                    <br>
                    Status: <span class="<%= @order.status%>"><%= @order.status %></span>
                  </td>
                </tr>
              </table>
            </td>
          </tr>

          <tr class="information">
            <td colspan="4">
              <table>
                <tr>
                  <td>
                    <b><%= @order.user.name %></b><br>
                    <%= @full_address %><br>
                    <i class="far fa-envelope"></i> <%=  %><br>
                    <i class="fas fa-phone"></i> <%=  %>
                  </td>

                  <td>
                    <b><%= @order.user.name %></b><br>
                    <%= @full_address %><br>
                    <i class="far fa-envelope"></i> <%= @order.user.email %><br>
                    <i class="fas fa-phone"></i> <%= @order.user.phone %>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
         

          <tr class="heading">
            <td>Item</td>
            <td class="right">Price</td>
            <td class="right">Qty</td>
            <td>Total</td>
          </tr>
          

          
            <tr class="item">
                <td>
                    <%= @product.name %><br>
                    <small><%= @product.description %></small>
                </td>

                <td class="right">
                    <%= @product.price %>
                </td>

                <td class="right">
                    x <%= 1 %>
                </td>

                <td>
                    <%= @product.price * 1 %>
                </td>
            </tr>
       <tr class="heading">
            <td>Payment Method</td>
            <td colspan="2"></td>
            <td>Shipping Fee</td>
          </tr>

          <tr class="details">
            <td><%= @order.payment_mode.capitalize %></td>
            <td colspan="2"></td>
            <td><%= @product.shipping_method.first.price%></td>
          </tr>

          <tr>
            <td colspan="4"></td>
          </tr>

          

          <tr>
            <td colspan="2"></td>
            <td><b>VAT (18%)</b></td>
            <td>= </td>
          </tr>

          <tr class="heading">
            <td colspan="2"></td>
            <td><b>TOTAL:</b></td>
            <td>
               <b><%= @product.price + @product.shipping_method.first.price%></b>
            </td>
          </tr>
        </table>
    </div>













