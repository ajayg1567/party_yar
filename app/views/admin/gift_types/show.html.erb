<div class="row">
	<div class="col-lg-12 offset-lg-3">
		<div class="well bs-component">
			<p>
				<strong>Name:</strong>
				<%= @gift_type.name %>
			</p>

			<p>
			  <strong>Icon:</strong><br>
			  <%if @gift_type.icon.attached?%>
			    <%= image_tag url_for(@gift_type.icon), width: '100x100' %>
			  <%end%>
			</p>

			<%= link_to 'Edit', edit_admin_gift_type_path(@gift_type) %> |
			<%= link_to 'Back', admin_gift_types_path %>

		</div>
	</div>
</div>