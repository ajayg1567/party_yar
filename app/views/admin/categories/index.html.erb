<div class="row">
	<div class="col-lg-12 offset-lg-3">
		<div class="well bs-component">
			<fieldset>
				<legend>Categories <%= link_to 'Add Category', new_admin_category_path, class: 'btn btn-primary btn-sm custom'%></legend>


				<table class="responsive nowrap table table-hover" id="dttb-1" data-sort="true" data-source="<%= admin_categories_path(format: :json)%>">
					<thead>
						<tr>
							<th data-data="name">Name</th>
							<th data-data="occasion">Occasion</th>
							<th data-data="super_category">Super Category</th>
							<th data-data="created_at">Created at</th>
							<th data-data="updated_at">Updated at</th>
							<th data-data="url" data-orderable="false" data-class-name="all" data-searchable="false" class="skip-export" width="100px">Actions</th>
						</tr>
					</thead>

				</table>
			</fieldset>
		</div>
	</div>
</div>