<div class="row">
	<div class="col-lg-12 offset-lg-3">
		<div class="well bs-component">
			<p>
				<strong>Name:</strong>
				<%= @category.name %>
			</p>

			<p>
				<strong>Occasion:</strong>
				<%= @category.occasion.name %>
			</p>

			<p>
				<strong>Super category:</strong>
				<%= @category.super_category.name %>
			</p>

			<p>
			  <strong>Banner:</strong><br>
			  <%if @category.banner.attached?%>
			    <%= image_tag url_for(@category.banner), width: '300x300' %>
			  <%end%>
			</p>

			<%= link_to 'Edit', edit_admin_category_path(@category) %> |
			<%= link_to 'Back', admin_categories_path %>

		</div>
	</div>
</div>